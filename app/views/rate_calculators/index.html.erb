<h2>Finance Calculations</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Months</th>
      <th scope="col">Beginning Performing Principal</th>
      <th scope="col">Scheduled Payment</th>
      <th scope="col">Scheduled Interest</th>
      <th scope="col">Servicing Fee</th>
      <th scope="col">Scheduled Principal</th>
      <th scope="col">Prepayments</th>
      <th scope="col">Defaults</th>
      <th scope="col">Principal Received</th>
      <th scope="col">Ending Performing Balance</th>
      <th scope="col">Principal Received</th>
      <th scope="col">Interest Received</th>
      <th scope="col">Cash Received</th>
    </tr>
  </thead>
  <tbody>
    <% (1..(@duration)).each do |month|  %>
      <tr>
        <td><%= month %></td>
        <td><%= @payments[month - 1].round %></td>
        <td><%= @scheduled_payment.round %></td>
        <td><%= @interests[month - 1].round %></td>
        <td><%= @servicing_fees[month - 1].round %></td>
        <td><%= @principals[month - 1].round %></td>
        <td><%= @prepayments[month-1].round %></td>
        <td><%= @defaults[month - 1].round %></td>
        <td><%= @principal_received[month -1].round %></td>
        <td><%= @end_perf_balances[month - 1].round %></td>
        <td><%= @principal_received[month -1].round %></td>
        <td><%= @received_interests[month - 1].round %></td>
        <td><%= @cash_received[month - 1].round %></td>
      </tr>
    <% end %>
  </tbody>
</table>