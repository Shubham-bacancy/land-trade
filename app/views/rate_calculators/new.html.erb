<div>
  <h2>Enter values details here..</h2>
</div>
<div> 
  <%= form_tag(rate_calculators_index_path, method: :get) do %>
    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label">Unpaid Principal Balance</label>
      <div class="col-sm-10">
        <%= text_field_tag :principal_balance  %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label">WAC</label>
      <div class="col-sm-10">
        <%= text_field_tag :wac %>
      </div>
    </div>
    
    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label">Servicing Fee</label>
      <div class="col-sm-10">
        <%= text_field_tag :servicing_fee %>
      </div>
    </div>
    
    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label">Duration</label>
      <div class="col-sm-10">
        <%= text_field_tag :duration %>
      </div>
    </div>
    
    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label"></label>
      <div class="col-sm-10">
        <button class="btn btn-success">Submit</button>
      </div>                    
    </div>
  <% end %>
</div>
